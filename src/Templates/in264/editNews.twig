{% extends 'in264/layout/head.twig' %}
{% block content %}
    <section id="content" class="table-layout animated fadeIn">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                    &nbsp;
                </div>
                <div class="col-md-8">
                    <div class="f-center">
                        <i class="imoon imoon-newspaper imoon-5x"></i>
                        <h1> Create News</h1>
                        <p>Please verify before execute !</p>
                        <p>&nbsp;</p>
                    </div>
                    <div class="panel" style="border:6px solid rgba(204, 204, 204,0.5)">
                        <div class="panel-heading">
                            <span class="panel-title"><i class="imoon imoon-quill"></i> Input Informations</span>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" method="post">
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"><i class="imoon imoon-quill"></i></span>
                                        <input type="text" name="contentTitle" class="form-control" placeholder="Input Title" value="{{ infoNews.title }}" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <span class="append-icon right"><i class="fa fa-align-right"></i></span>
                                        <textarea id="contentNews" name="contentNews" class="form-control" rows="5" placeholder="Content Over Here" maxlength="100" required>{{ infoNews.content }}</textarea>
                                    </div>
                                </div>

                                <div class="form-group" style="margin-bottom:0 !important;">
                                    <div class="col-lg-12">
                                        <span class="text-danger"><i class="fa fa-exclamation-circle"></i> This editor does not provide auto save.</span>
                                        <span id="linesUsed" style="display: none;">0</span>
                                        <input type="submit" class="btn btn-success pull-right" value="Update News">
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>

            </div>
            <div class="col-md-2">
                &nbsp;
            </div>

        </div>






        </div>
    </section>
{% endblock %}

{% block customJS %}

    {#<script>#}
        {#tinymce.init({#}
            {#selector: '#contentNews'#}
        {#});#}
    {#</script>#}
    <script>
        $(document).ready(function(){

            var lines = 3;
            var linesUsed = $('#linesUsed');

            $('#contentNews').keydown(function(e) {

                var newLines = $(this).val().split("\n").length;
                linesUsed.text(newLines);

                if(e.keyCode == 13 && newLines >= lines) {
//                    linesUsed.css('color', 'red');
                    alert('only 3 lines allowed');
                    return false;
                }
            });
        });
    </script>

{% endblock %}